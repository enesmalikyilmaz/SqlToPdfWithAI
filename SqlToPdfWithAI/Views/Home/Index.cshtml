@{
    ViewData["Title"] = "SQL to PDF";
}

<div class="container mt-4">
    <h1 class="mb-3">SQL → PDF Rapor Aracı</h1>

    <form method="post" action="#">
        <div class="mb-3">
            <label for="sql" class="form-label">SQL Sorgusu</label>
            <textarea id="sql" name="sql" class="form-control" rows="6"
                      placeholder="Örn: SELECT TOP 10 OrderDate, Amount FROM Sales ORDER BY OrderDate DESC"></textarea>
        </div>

        <button class="btn btn-primary" type="submit" disabled>
            Rapor Al (Henüz aktif değil)
        </button>
        
    </form>
</div>
